/* page/page-mall/mall-detail/mall-detail.wxss */

.container {
  background-color: #f8f8f8;
  min-height: 100%;
  padding-bottom: 100rpx;
}

.ori-price{
  margin-top: 10rpx;
  padding-left:35rpx;
  font-size: 24rpx;
  color: #b5b5b5;
  font-weight: bold;
  text-decoration: line-through;
}
.month-num{
  position: absolute;
  right: 48rpx;
  bottom: 50rpx;
  color: #b5b5b5;
  font-size: 24rpx;
}

.swiper-container{
  width: 100%;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:750rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:750rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #000;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .3;
}  
.swiper-container .dots .dot.active{  
  opacity: .6;
}
.goods-info{
  position: relative;
  background-color: #fff;
  padding: 45rpx 0 55rpx;
  margin-bottom: 24rpx;
  width: 100%;
}

.goods-info-fx {
  position: absolute;
  width: 50px;
  height: 60px;
  right: 0;
  top: 0;
}

.goods-info-fx button {
  position: absolute;
  width: 50px;
  height: 60px;
  top: 0;
  left: 0;
  z-index: 2;
  opacity: 0;
}

.goods-info-fx image {
  width: 30px;
  height: 30px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  margin: 10px 10px 0 5px;
}

.goods-info-fx text {
  position: absolute;
  bottom: 3px;
  left: 0;
  z-index: 1;
  font-size: 10px;
  text-align: center;
}
.goods-info .goods-title{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1.4;
  color: #353535;
  margin-bottom: 10rpx;
  padding-right: 60px;
}
.goods-info .goods-share{
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 25rpx;
  line-height: 1.4;
  color: #CC0000;
  margin-bottom: 28rpx;
}
.goods-info .goods-price{
   box-sizing:border-box;
   color:#e64340;
   font-size: 42rpx;
   font-weight: bold;
   width: 30%;
}
.size-wrapper{
  background: #fff;
   margin-bottom: 28rpx;
}
.row-arrow{
  width: 100%;
  box-sizing: border-box;
  padding: 0  120rpx 0 35rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  height: 100rpx;
  font-size: 28rpx;
  line-height: 100rpx;
  background: #fff url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 697rpx center;
  background-size: 18rpx auto;
  color: #333333;
  border-bottom: 1px solid #f8f8f8;
}
.goods-post{
  display: flex;
  flex-flow: row;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 25rpx;
  font-size: 28rpx;
  color: #333333;
}
.goods-post view{
  display: flex;
  align-items: center;
  margin-left: 50rpx;
  }
.dot-icon{
  margin-right: 10rpx;
  width: 8rpx;
  height: 8rpx;
}
.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:28rpx;
  color:#333333;
  padding: 30rpx;
}
.goods-text{
  padding: 0 10rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.des-imgs{
  width:100%;
}
.des-imgs image{
  width: 100%;
}
.footer-box{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow:0 0 8rpx 0 ;
}
.footer-box .contact {
  position: relative;
  width: 150rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 20rpx;
  color: #535353;
  box-sizing: border-box;
}
.love-icon{
  width:  42rpx ;
  height: 36rpx;
}
.footer-box .shop-cart-btn {
  position: relative;
  width: 135rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 20rpx;
  color: #acacb7;
  box-sizing: border-box;
  background: url("https://cdn.it120.cc/images/weappshop/cart.png") no-repeat center 21rpx; 
  background-size: 44rpx auto;
}
.footer-box .shop-cart-btn .shop-num{
  position: absolute;
  color:#e64340;
  left: 85rpx;
  top:10rpx;
}
.footer-right{
  display: flex;
  flex-flow: row;
}
.footer-box .join-shop-cart{
  text-align: center;
  width: 300rpx;
  height: 100%;
  line-height: 90rpx;
  background-color: #cbb1fc;
  color:#fff;
  font-size: 34rpx;
}
.footer-box .now-buy{
  text-align: center;
  height: 100%;
  width: 300rpx;
  line-height: 90rpx;
  background-color: #9661fa;
  color:#fff;
  font-size: 34rpx;
}
.show-popup{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  z-index: 4;
}
.popup-mask{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 5;
}
.popup-contents{
  position: fixed;
  left: 0;
  bottom: 0;
  width:100%;
  background-color: #fff;
  z-index: 6;
}
.pop-goods-info{
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 25rpx;
  padding: 30rpx 0;
}
.pop-img-box{
  width: 200rpx;
  height: 200rpx;
  margin-right: 26rpx;
  margin-top: -150rpx;
  overflow: hidden;
  border-radius: 40rpx;
  box-shadow: 0 5rpx 8rpx 4rpx #d5d5d5;
}
.pop-img-box .goods-thumbnail{
  width: 200rpx;
  height: 200rpx;
}
.pop-goods-title{
  width: 484rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size:26rpx;
  color:#000000;
}
.pop-goods-price{
  font-size:28rpx;
  color:#e64340;
  margin-top:20rpx; 
}
.pop-goods-num{
  font-size:28rpx;
  color:#353535;
  margin-top:10rpx; 
}
.pop-goods-close{
  position: absolute;
  top: 25rpx;
  right: 30rpx;
  width: 36rpx;
  height: 36rpx;
  background:url("https://cdn.it120.cc/images/weappshop/popup-close.png") no-repeat center center;
  background-size: 36rpx auto;
  margin-top: -10rpx;
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 30rpx 0 20rpx 30rpx;
}
.size-label-box .label-item-box{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  padding: 0 28rpx 0 25rpx;
}
.size-label-box .label-item{
  font-size:28rpx;
  color:#353535;
  margin-right: 25rpx;
  margin-bottom: 25rpx;
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #f0eef2;
}
.size-label-box .label-item.active{
  color: #fff;
  background: #cbb1fc;
}
.buy-num-box{
   display: flex;
   justify-content: space-between;
   padding: 0rpx 30rpx 48rpx 0;
   margin-left: 30rpx; 
   margin-top: 25rpx;
   align-items: center;
}
.num-label{
  font-size:26rpx;
  color:#000000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #eee;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.popup-join-btn{
  width: 100%;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  font-size:34rpx;
  color:#ffffff;
  background-color: #e64340;
}
.buy-num-box .num-box .hui{
  background-color: #f5f5f9;
}