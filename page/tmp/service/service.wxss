/* 服务的标题 */

.title {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  border-bottom: 1rpx solid #e1e1e1;
}

.title .txt {
  flex-grow: 1;
  font-size: 32rpx;
  color: #353535;
  line-height: 60rpx;
  padding: 10rpx 25rpx;
}

.title .serviceMore {
  display: flex;
  flex-flow: row nowrap;
  height: 60rpx;
  align-items: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  background: #fff;
}

.title .serviceMoreHover {
  background: #f8f8f8;
}

.title .serviceMore::after {
  border: 0;
}

.title .serviceMore image {
  width: 34rpx;
  height: 34rpx;
  line-height: 1;
}

.title .serviceMore text {
  font-size: 24rpx;
  color: #999;
  line-height: 1;
  padding-left: 15rpx;
}

/* —————————————————————— */

/* 服务组件1 */

.service-label {
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  border-radius: 0;
}

.service-label-hover {
  background: #f8f8f8;
}

.service-label::after {
  border: 0;
}

.service-label .service-label-imgs {
  width: 60rpx;
  height: 60rpx;
}

.service-label .txts {
  display: flex;
  flex-flow: column;
  margin-left: 18rpx;
  align-items: flex-start;
  justify-content: flex-start;
}

.service-label .txts .txt1 {
  font-size: 30rpx;
  color: #353535;
  font-weight: 600;
  line-height: 1;
}

.service-label .txts .txt2 {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}

/* —————————————————————— */

/* 服务组件2 */

.service-label .txts2 {
  display: flex;
  flex-flow: column;
  margin-right: 28rpx;
  align-items: flex-start;
  justify-content: flex-start;
}

.service-label .txts2 .txt1 {
  font-size: 30rpx;
  color: #353535;
  font-weight: 600;
  line-height: 1;
  width: 160rpx;
  text-align: left;
}

.service-label .txts2 .txt2 {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1;
  width: 160rpx;
  text-align: left;
}

.serviceMore {
  justify-content: flex-start;
  padding-left: 15rpx;
}

.service-label .txts3 {
  display: flex;
  flex-flow: column;
  margin-right: 10rpx;
  align-items: flex-start;
  justify-content: flex-start;
}

.service-label .txts3 .txt1 {
  font-size: 28rpx;
  color: #353535;
  font-weight: 600;
  line-height: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 200rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: left;
}

.service-label .txts3 .txt2 {
  margin-top: 15rpx;
  font-size: 22rpx;
  color: #999;
  line-height: 1;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 200rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  text-align: left;
}

