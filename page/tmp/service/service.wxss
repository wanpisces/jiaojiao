/* 随手拍 */

.suishoupai .suishoupaititle {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 20rpx 0;
}

.suishoupai .suishoupaititle image {
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #f4f4f4;
  border-radius: 50%;
  margin-left: 20rpx;
}

.suishoupai .suishoupaititle .nameView {
  display: flex;
  flex-flow: column;
  flex-grow: 1;
  margin-left: 10rpx;
}

.suishoupai .suishoupaititle .nameView view {
  font-size: 27rpx;
  color: #353535;
}

.suishoupai .suishoupaititle .nameView text {
  margin-top: 15rpx;
  font-size: 20rpx;
  color: #a9a9a9;
}

.suishoupai .suishoupaititle {
  font-size: 26rpx;
  color: #ff7030;
  margin-right: 20rpx;
}

.suishoupai  .content {
  font-size: 29rpx;
  color: #353535;
  padding: 0 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: box;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.suishoupai  .content  text {
  color: #ff6527;
  font-size: 29rpx;
  margin-right: 10rpx;
}

.suishoupai .imgs {
  padding: 0 20rpx;
  margin-top: 30rpx;
  display: flex;
  flex-flow: row wrap;
}

.suishoupai .imgs view {
  width: 33.3%;
  justify-content: center;
  align-items: center;
}

.suishoupai .imgs view image {
  width: 235rpx;
  height: 230rpx;
}

.suishoupai .bnts {
  display: flex;
  flex-flow: row nowrap;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 20rpx solid #f4f4f4;
}

.suishoupai .bnts button::after {
  border: 0;
}

.suishoupai .bnts button {
  width: 50%;
  line-height: 80rpx;
  margin: 0;
  padding: 0;
  text-align: center;
  color: #666;
  font-size: 26rpx;
  background: #fff;
  box-sizing: border-box;
  border-radius: 0;
}

.suishoupai .bnts button text {
  font-size: 20rpx;
  color: #999;
}

.suishoupai .bnts .selectBt {
  color: #ff7030;
}

.suishoupai .bnts .selectBt text {
  color: #ff7030;
}

.suishoupai .suishoupaiAddr {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 70rpx;
}

.suishoupai .suishoupaiAddr image {
  width: 44rpx;
  height: 44rpx;
  margin-left: 10rpx;
}

.suishoupai .suishoupaiAddr text {
  color: #a9a9a9;
  font-size: 24rpx;
  margin-left: 20rpx;
}
