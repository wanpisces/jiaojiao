.module-text{
  padding: 20rpx;
  font-size: 28rpx;
  color: #333333;
}
.module-item{
  width: 32.5%;
}
.module-item1{
  width: 49%;
}


.vedio-wrap{
  position: relative;
  width: 100%;
  height: 245rpx;
}
.vedio-img{
  width:100%;
   height: 100%; 
}
.vedio-listen{
  display: flex;
  align-items: center;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  font-size: 20rpx;
  color: #fff;
}
.vedio-listen image{
  width: 20rpx;
  height: 14rpx;
  margin-right: 10rpx;
}

.mudel-info{
  position: absolute;
  bottom: 15rpx;
  left: 20rpx;
  color: #fff;
  font-size: 28rpx;
  overflow: hidden;
  width: 80%;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.news-item{
  display: flex;
  flex-flow: row;
  margin-top: 5rpx;
}
.news-img{
  width: 235rpx;
  height: 160rpx;
}
.news-content{
  margin-left: 30rpx;
  width: 454rpx;
  height: 160rpx;
}
.news-title{
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.news-view{
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #535353;
}

/* 热点文章 */
.hotspot-item{
  padding: 0 48rpx;
}
.hotspot-con{
  margin-top: 28rpx;
  background: #fff;
}
.hotspot-con image{
  height: 300rpx;
}
.hotspot-text{
  display: flex;
  flex-flow: row;
  align-items: center;
  padding: 0 20rpx;
  height: 100rpx;
}
.tag-wrap{
  margin-right:65rpx;
  font-size: 32rpx;
  color: #edcaa9;
}
.hotspot-titie{
  width: 430rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 32rpx;
  color: #333333;
}
.hotspot-img{
  width: 100%;
}

