.item {
  display: flex;
  flex-flow: row nowrap;
  margin: 0 15rpx;
  padding: 20rpx 5rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.item .leftView {
  display: flex;
  flex-flow: column;
  flex-grow: 1;
  flex-shrink: 1;
  justify-content: space-between;
  align-items: flex-start;
}

.item .leftView .title {
  font-size: 32rpx;
  color: #000;
}

.item .leftView .attribute {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.item .leftView .attribute .commentImg {
  width: 23rpx;
  height: 21rpx;
}

.item .leftView .attribute .readImg {
  margin-left: 32rpx;
  width: 24rpx;
  height: 21rpx;
}

.item .leftView .attribute .commentTxt, .item .leftView .attribute .readTxt {
  font-size: 23rpx;
  color: #acacac;
  margin-left: 9rpx;
}

.item .leftView .attribute .time {
  font-size: 23rpx;
  color: #acacac;
  margin-left: 45rpx;
}

.item .imgBig {
  flex-grow: 0;
  flex-shrink: 0;
  width: 200rpx;
  height: 150rpx;
  border-radius: 15rpx;
}

/* ......... */

.loveTitle {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  position: relative;
  border: 1rpx solid #f2f2f2;
  height: 88rpx;
}

.loveTitle .txt {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loveTitle .txt text {
  font-size: 30rpx;
  font-weight: 800;
  color: #353535;
}

.loveTitle .more {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  position: absolute;
  right: 20rpx;
  padding: 0 20rpx;
  margin: 0;
  background: #fff;
  border-radius: 0;
  height: 84rpx;
}

.loveTitle .more::after {
  border: 0;
}

.loveTitle .moreHover {
  background: #f8f8f8;
}

.loveTitle .more text {
  font-size: 24rpx;
  color: #999;
}

