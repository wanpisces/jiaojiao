.manager-label {
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  background: #fff;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  border-radius: 0;
}

.manager-label-hover {
  background: #f8f8f8;
}

.manager-label::after {
  border: 0;
}

.manager-label .manager-label-imgs {
  width: 280rpx;
  height: 210rpx;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.manager-label .txts {
  width: 280rpx;
  display: flex;
  flex-flow: column;
  align-items: flex-start;
  justify-content: flex-start;
}

.manager-label .alignCenter {
  align-items: center;
  justify-content: flex-center;
}

.manager-label .txts .txt1 {
  font-size: 30rpx;
  color: #353535;
  font-weight: 600;
  line-height: 1;
}

.manager-label .txts .txt2 {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1;
}

