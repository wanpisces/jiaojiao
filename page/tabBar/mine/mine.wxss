/* pages/mine/mine.wxss */

.base {
  display: flex;
  flex-flow: row;
  align-items: center;
  padding-left: 45rpx;
  height: 240rpx;
  background: #b995fb;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#9661fa), to(#b995fb));
}
.avator{
  width:120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-shadow: 0 2px 5px 2px #9661fa;
}

.base .name {
  font-size: 34rpx;
  color: #fff;
  margin-left: 70rpx;
}

.base .userId {
  font-size: 18rpx;
  color: #666;
  margin-top: 10rpx;
}

.status-wrapper{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 185rpx;
  background: #eeeeee;
}
.status-content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 700rpx;
  height: 140rpx;
  background: #fff;
}
.status-content>navigator{
  display: flex;
  flex-flow: column;
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}
.status-content>navigator>image{
  margin: 0 auto 20rpx;
}

.userBut::after {
  border: 0;
}

.userBut {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #fff;
  padding: 12rpx 30rpx;
  margin: 30rpx;
  line-height: 1;
  background: #00a0e9;
  border-radius: 8rpx;
}

.item {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  padding: 0;
  margin: 0;
  border-radius: 0;
  background: #fff;
  height: 95rpx;
  border: 1rpx solid #f2f2f2;
}

.item::after {
  border: 0;
}

.itemHover {
  background: #f8f8f8;
}

.item .img {
  width: 42rpx;
  height: 42rpx;
  margin-left: 20rpx;
}

.item .txt {
  font-size: 29rpx;
  color: #4f4f4f;
  margin-left: 23rpx;
  flex-grow: 1;
  text-align: left;
}

.item .spot {
  display: flex;
  width: 16rpx;
  height: 16rpx;
  background: #f00;
  border-radius: 50%;
}

.item .tip {
  font-size: 24rpx;
  color: #999;
}

.item .goToImg {
  width: 34rpx;
  height: 34rpx;
  padding: 0 20rpx 0 6rpx;
}

.line {
  width: 100%;
  height: 20rpx;
  background: #f2f2f2;
}
